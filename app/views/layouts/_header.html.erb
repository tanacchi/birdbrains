<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="header">
      <font color="#77d" size="7"><%=link_to_unless_current 'BirdBrains', root_path %></font>
      <ul class="nav navbar-nav navbar-right" style="font-size: 25px; margin-top: 10px;">
        <%  if logged_in? %>
          <li><%= link_to current_user.name, users_path %></li>
          <li><%= link_to 'Signout', signout_path, data: { confirm: 'Are you sure ?' } %></li>
        <% else %>
          <li><%= link_to 'Signin', signin_path %></li>
          <li><%= link_to 'Signup', signup_path %></li>
        <%  end %>
      </ul>
    </div>
  </div>
</header>
<% flash.each do |type, msg| %>
  <div class="alert alert-<%= type %>" style="margin: -20px 0px 10px; padding: 15px 100px 15px; ">
    <a class="close" data-dismiss="alert">Ã—</a>
    <%= msg %>
  </div>
<% end %>
