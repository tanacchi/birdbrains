<h1>ユーザーの編集</h1>

<div class="container">
  <div class="form-group col-xs-4">
    <%= form_for(@user, url: users_path(@user)) do |f| %>
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: 'form-control', placeholder: 'ユーザー名を入力' %><br>

      <%= f.label :email, 'Email' %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレスを入力' %><br>

      <%= f.submit "更新", class: "btn btn-primary", style: 'background-color: #77d;' %><br>
    <% end %>
    <%= link_to '戻る', users_path, class: 'btn btn-primary', style: 'margin-top: 50px; background-color: #77d;' %>
  </div>
</div>
