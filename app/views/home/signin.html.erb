<h1>SignIn</h1>

<div class="container">
  <div class="form-group col-xs-4">
    <%= form_for(:session, url: signin_path) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %><br>

      <%= f.submit "Log in", class: "btn btn-primary" %><br>
    <% end %>
    <%= link_to 'Back', root_path, class: 'btn btn-primary', style: 'margin-top: 50px;' %>
    <%= link_to 'Signup', signup_path, class: 'btn btn-primary', style: 'margin-top: 50px;' %>
  </div>
</div>
