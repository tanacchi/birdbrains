<h1>メモ作成</h1>

<div class="container">
  <div class="form-group col-xs-4">
    <%= form_for(@memo, url: users_memos_path) do |f| %>
      <%= f.label :title, 'タイトル' %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'タイトルを入力' %><br>

      <%= f.label :body, '本文' %>
      <%= f.text_area :body, class: 'form-control', placeholder: '本文を入力' %><br>

      <%= f.submit "メモ作成", class: "btn btn-primary", style: 'background-color: #77d;' %><br>
    <% end %>
    <%= link_to '戻る', users_path, class: 'btn btn-primary', style: 'margin-top: 50px; background-color: #77d;' %>
  </div>
</div>
