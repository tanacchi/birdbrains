<div class="panel panel-default" style="border: solid 3px mediumslateblue;">
  <div class="panel-heading panel-title" style="background-color: mediumslateblue; color: white;">
    <%= link_to_unless_current memo.title, users_memos_path(id: memo) %><br>
  </div>
  <div class="panel-body">
    <div class="well"> <%= simple_format("#{memo.body}") %></div>
  </div>
  <div class="panel-footer">
  <%= "Made time : #{format_datetime(memo.made_time)}" %>
    <%= "Updated time : #{format_datetime(memo.updated_time)}" %>
  </div>
</div>
