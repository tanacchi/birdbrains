<h1>Memo#Edit</h1>

<div class="container">
  <div class="form-group col-xs-4">
    <%= form_for(@memo, url: url_for(action: 'update', id: @memo.id)) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %><br>

      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control' %><br>

      <%= f.submit "Edit memo", class: "btn btn-primary" %><br>
    <% end %>
    <%= link_to 'Back', users_memos_path(id: @memo), class: 'btn btn-primary', style: 'margin-top: 50px;' %>
  </div>
</div>
