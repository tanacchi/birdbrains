<h1>Memo#Edit</h1>

<div class="row">
  <%= form_for(@memo, url: users_memos_path) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

    <%= f.label :body %>
    <%= f.text_area :body %>

    <%= f.submit "Edit memo", class: "btn btn-primary" %>
  <%  end %>
  <%= link_to 'Back', users_memos_path %>
</div>
