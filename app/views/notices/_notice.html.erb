<% back_color = notice.has_read ? 'white' : 'lightskyblue' %>
<%= content_tag(:div, style: "background-color: #{back_color};") do %>
  ==================================<br>
  <%= "name: #{notice.name}" %><br>
  <%= "message: #{notice.message}" %><br>
  <%= "created at: #{format_datetime(notice.created_at)}" %><br>
  <% unless notice.has_read %>
    <%= button_to 'Mark as Read', notice_mark_as_read_path(id: notice), class: 'btn btn-default' %>
  <% end %>
  ==================================<br>
<% end %>
